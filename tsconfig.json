{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": ".",
        "resolveJsonModule": true
    },
    "include": [
        "index.ts",
        "types.ts",
        "lib/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}